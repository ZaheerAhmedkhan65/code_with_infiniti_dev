<div class="container">
  <div class="card border-0">
    <div class="card-title text-center my-3 bg-secondary-subtle py-3">
      <h1>Users</h1>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role == "admin" ? "Admin" : "Student" %></td>
                <td>
                  <div class="d-flex gap-3">
                    <%= button_to 'Delete', user, method: :delete, data: { turbo_confirm: 'Are you sure to delete this student ?' }, class: 'btn btn-danger btn-sm fw-bold rounded-0' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
