<%= form_with url: contacts_path, method: :post, local: true do |form| %>
 
    <div class="form-group mb-1">
      <%= form.label :name, "Name" , class:'form-label'%>
      <%= form.text_field :name, name: "contact[name]" , class:'form-control' %>
    </div>
  
    <div class="form-group mb-1">
      <%= form.label :email, "Email" , class:'form-label' %>
      <%= form.email_field :email, name: "contact[email]" , class:'form-control' %>
    </div>
  
    <div class="form-group mb-1">
      <%= form.label :message, "Message" , class:'form-label' %>
      <%= form.text_area :message, name: "contact[message]" , class:'form-control' %>
    </div>
  
    <div class="actions my-3 text-center">
      <%= form.submit "Send Message" , class:'btn btn-success' %>
    </div>
  <% end %>
  