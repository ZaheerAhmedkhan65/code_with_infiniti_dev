<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card rounded-0">
        <div class="card-header text-center bg-primary text-white rounded-0">
          <h2>Edit User</h2>
        </div>
        <div class="card-body">
          <%= form_for @user, url: user_path(@user), method: :put do |f| %>
            <%= render "devise/shared/error_messages", resource: @user %>

            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="text-center">
              <%= f.submit "Update User", class: "btn btn-primary rounded-0" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= link_to "Back", admin_users_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
