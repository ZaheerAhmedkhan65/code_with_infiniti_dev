<h1 class="text-center my-4">All Users</h1>
<div class="table-responsive">
  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="text-center my-3">
  <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-primary' %>
</div>
