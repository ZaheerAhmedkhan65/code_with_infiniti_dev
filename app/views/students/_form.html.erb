<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row mb-3">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :name, class:'form-label' %>
        <%= form.text_field :name , class:'form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :image, class:'form-label' %>
        <%= form.file_field :image , class:'form-control' %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :repository_link, class:'form-label' %>
        <%= form.text_field :repository_link , class:'form-control' %>
      </div>
    </div>
    
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :page_link, class:'form-label' %>
        <%= form.text_field :page_link , class:'form-control' %>
      </div>
    </div>
  </div>
  <div class="row mb-3">  
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :email, class:'form-label' %>
        <%= form.text_field :email , class:'form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :phone, class:'form-label' %>
        <%= form.text_field :phone , class:'form-control' %>
      </div>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :education, class:'form-label' %>
        <%= form.text_field :education , class:'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary rounded-0 fw-bold" %>
    <%= link_to "Go Back", students_path , class:'btn btn-outline-primary rounded-0 mx-2 fw-bold' %>
  </div>
<% end %>
