<%# Only show "Sign in" link if user is not already on the sessions (sign-in) page %>
<% if controller_name != 'sessions' %>
  <p>Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "text-decoration-none" %></p>
<% end %>

<%# Show "Sign up" link if user can register and is not already on the registrations (sign-up) page %>
<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>Donâ€™t have an account ? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %></p>
<% end %>

<%# Show "Forgot your password?" link if recoverable and not on passwords/registrations page %>
<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-danger text-decoration-none" %></p>
<% end %>

<%# Show "Didn't receive confirmation instructions?" link if confirmable and not on confirmations page %>
<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-warning text-decoration-none" %></p>
<% end %>

<%# Show "Didn't receive unlock instructions?" link if lockable and not on unlocks page %>
<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-warning" %></p>
<% end %>

<%# Show OmniAuth provider links if omniauthable %>
<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <p><%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-info", data: { turbo: false } %></p>
  <% end %>
<% end %>
